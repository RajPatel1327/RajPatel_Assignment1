<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:background="#8AFFEB3B"
    android:backgroundTint="#5C3300"
    android:foregroundTint="#EFB8B8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:background="#E20E0E0E"
        android:foregroundTint="#00222222"
        android:padding="20dp"
        android:text="@string/select_any_one_language"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="48sp" />

    <Spinner
        android:id="@+id/mySpinner"
        android:layout_width="370dp"
        android:layout_height="97dp"
        android:layout_margin="10dp"
        android:background="#FFFBFB"
        android:backgroundTint="#FFFFFF"
        android:padding="20dp"
        android:scrollbarSize="4dp"
        android:textAlignment="textStart"
        android:textDirection="locale" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/myButton"
            android:layout_width="170dp"
            android:layout_height="62dp"
            android:backgroundTint="#220800"
            android:text="@string/submit"
            android:textColor="#FFEB3B"
            android:textColorLink="#F30101"
            android:textSize="20sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>